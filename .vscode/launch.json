    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run solver",
            "type": "python",
            "request": "launch",
            "program": "solve.py",
            "args": [ "${input:day}" ],
            "console": "integratedTerminal"
        },
        {
            "name": "Download challenge text",
            "type": "python",
            "request": "launch",
            "program": "solve.py",
            "args": [ "-c", "${input:day}" ],
            "console": "integratedTerminal"
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "day",
                "description": "Enter day to run",
            }
        }
    ]
}